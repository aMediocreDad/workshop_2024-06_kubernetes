{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.11.0/.schema/devbox.schema.json",
  "packages": [
    "argocd@latest",
    "bun@latest",
    "kubernetes-helm@latest",
    "kubectl@latest",
    "minikube@latest",
    "terraform@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!'"
    ],
    "scripts": {
      "app": [
        "bun run --hot app/src/index.ts"
      ],
      "start": [
        "minikube start"
      ],
      "stop": [
        "minikube stop"
      ]
    }
  }
}