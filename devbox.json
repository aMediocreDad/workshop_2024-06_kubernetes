{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": [
    "deno@latest",
    "minikube@latest",
    "kubectl@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!'"
    ],
    "scripts": {
      "app": [
        "deno serve --watch main.ts"
      ],
      "start": [
        "minikube start"
      ],
      "stop": [
        "minikube stop"
      ]
    }
  }
}